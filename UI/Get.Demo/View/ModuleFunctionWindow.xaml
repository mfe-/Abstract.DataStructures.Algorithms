<Window x:Class="DataStructures.Demo.View.ModuleFunctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataStructures.Demo.View"
        mc:Ignorable="d"
        Title="ModuleFunctionWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True" >
        <StackPanel Margin="15,20,15,20">
        <Button Content="Select assembly" VerticalAlignment="Top" Height="30" Command="{Binding PickAssemblyCommand}"></Button>
        
        <TextBox Text="{Binding Path=ModuleFunction.Description,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
            <ListBox MinHeight="40" ></ListBox>
            <Button Content="Save" Height="30"  VerticalAlignment="Bottom"
                    Command="{Binding SaveAssemblyCommand}"/>
            
                    
        </StackPanel>
    </DockPanel>
</Window>
