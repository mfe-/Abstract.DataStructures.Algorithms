            <GridSplitter HorizontalAlignment="Left" VerticalAlignment="Stretch"  Width="3" />
            <ui:GraphVisualization x:Name="_GraphVisualization"
                Cinch:SingleEventCommand.CommandParameter="{Binding Path=.}"
                Cinch:SingleEventCommand.RoutedEventName="MouseDoubleClick"
                Cinch:SingleEventCommand.TheCommandToRun="{x:Static ui:GraphVisualization.AddVertexRoutedCommand}">
                <ui:GraphVisualization.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="_Save" Command="Save" />
                        <MenuItem Header="_Load" Command="Open" />
                        <MenuItem Header="_Print" Command="Print" />
                    </ContextMenu>
                </ui:GraphVisualization.ContextMenu>
                <ui:GraphVisualization.Resources>
                    <Style TargetType="{x:Type ui:VertexVisualization}">

                        <Style.Triggers>
