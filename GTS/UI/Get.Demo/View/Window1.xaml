                        </Style.Triggers>

                    </Style>

                    <Style TargetType="{x:Type ui:EdgeVisualization}">
                        <Style.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="StrokeThickness" Value="2" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>


                </ui:GraphVisualization.Resources>

